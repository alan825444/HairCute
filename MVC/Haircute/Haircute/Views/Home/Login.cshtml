<!--***** login Area start****--->
<section id="login-area" class="">
    <div class="container">
        <div class="row login-area">
            <img class="login-logo" src="img/ad-img/loginlogo.png" alt="">
            <a href="#"><img src="img/ad-img/closebtn.png" class="login-closebtn"></a>
            <div class="row">
                <form action="#" method="POST">
                    <ul>
                        <li>
                            <div>
                                <input type="text" name="txtAcc" id="emailaddress"  maxlength="50" placeholder="請輸入電子信箱" class="login-text" autofocus>
                                <i class="login-pic1">
                                </i>
                            </div>
                        </li>
                        <li>
                            <div>
                                <input type="password" name="txtPwd" id="userpwd"  maxlength="15" placeholder="請輸入您設定的密碼" class="login-text">
                                <i class="login-pic2">
                                </i>
                            </div>
                        <li>
                            <input type="checkbox" id="remember" name="remember" class="login-chk"><b>記住帳號</b>
                            <a href="#">忘記密碼?</a>
                        <li>
                            <input type="submit" class="login-btn" value="登入">
                        </li>
                    </ul>
                </form>
            </div>
        </div>

    </div>
    <div class="col-6 my-3 d-flex flex-row-reverse">
        <a href="#"><i class="far fa-question-circle mr-1"></i>忘記密碼 </a>
    </div>
    <div class="col-12 d-flex justify-content-center">
        <button type="submit" class="btn log-in-btn">登入</button>
    </div>
    <div class="col-12 d-flex justify-content-center ">
        <p class="text-danger">@ViewBag.</p>
    </div>

</section>
<!--***** login Area end*****-->